<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="petrsu.smartroom.android.srclient"
    android:versionCode="14090"
    android:versionName="0.8.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-feature android:name="android.hardware.wifi" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_smartroom"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="petrsu.smartroom.android.srclient.SmartRoomInfo"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="application/sr"
                    android:scheme="content" />
                <data
                    android:host="*"
                    android:mimeType="application/sr"
                    android:scheme="file" />
            </intent-filter>
        </activity>
        <activity
            android:name="petrsu.smartroom.android.srclient.KP"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="petrsu.smartroom.android.srclient.Agenda"
            android:label="@string/agenda"
            android:launchMode="singleTask" />
        <activity
            android:name="petrsu.smartroom.android.srclient.ServicesMenu"
            android:label="@string/avail_services"
            android:launchMode="singleTask" />
        <activity
            android:name="petrsu.smartroom.android.srclient.Projector"
            android:label="@string/presentation"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="petrsu.smartroom.android.srclient.SettingsMenu"
            android:label="@string/menu_settings"
            android:launchMode="singleTask" />

        <service
            android:name="petrsu.smartroom.android.srclient.MicService"
            android:label="@string/mic_service" />
        <service
            android:name="petrsu.smartroom.android.srclient.NetworkService"
            android:label="@string/netService" />

        <activity
            android:name="petrsu.smartroom.android.srclient.Profile"
            android:label="@string/profileLabel"
            android:launchMode="singleTask" >
        </activity>
    </application>

</manifest>