<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/agenda_layout"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingTop="@dimen/agenda_padding_top">

	<LinearLayout
		android:id="@+id/avatar_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/avatar"
			android:layout_width="@dimen/agenda_avatar_width"
			android:layout_height="@dimen/agenda_avatar_height"
			android:layout_marginEnd="@dimen/agenda_avatar_margin_right"
			android:layout_marginLeft="@dimen/agenda_avatar_margin_left"
			android:layout_marginRight="@dimen/agenda_avatar_margin_right"
			android:layout_marginStart="@dimen/agenda_avatar_margin_left"
			android:layout_weight="2"
			android:contentDescription="@string/userAvatar"
			android:alpha="0.54
                "
			android:src="@drawable/crop" />

		<TextView
			android:id="@+id/speakerStatus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="@dimen/agenda_status_margin_top"
			android:text="(online)"
			android:textSize="24sp"
			android:textColor="@color/secondary_text_default_material_light" />
	</LinearLayout>

	<TextView
		android:id="@+id/speakerName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/avatar_status"
		android:layout_toEndOf="@id/avatar_status"
		android:layout_marginRight="@dimen/agenda_name_margin_right"
		android:layout_marginEnd="@dimen/agenda_name_margin_right"
		android:textSize="34dp"
		android:text="Name"
		android:textColor="@color/primary_text_default_material_light" />

	<TextView
		android:id="@+id/presentationTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/speakerName"
		android:layout_toRightOf="@id/avatar_status"
		android:layout_toEndOf="@id/avatar_status"
		android:textColor="@color/secondary_text_default_material_light"
		android:layout_marginRight="@dimen/agenda_title_margin_right"
		android:layout_marginEnd="@dimen/agenda_title_margin_right"
		android:textSize="24sp"
		android:textColorHint="@color/material_drawer_hint_text" />

