<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
    <TextView
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"/>
    
    <TextView
    	android:id="@+id/noAgendaView"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/agendaNotAvailable"
    	android:gravity="center"
    	android:layout_centerHorizontal="true"
	    android:layout_above="@id/center"
    	android:textSize="@dimen/agenda_ext_text_size"
    	android:clickable="false"/>
        
    <ImageView
        android:id="@+id/agendaRefresh"
        android:layout_width="@dimen/agenda_refresh_btn_width"
        android:layout_height="@dimen/agenda_refresh_btn_height"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center"
        android:layout_marginTop="@dimen/agenda_refresh_btn_margin_top"
        android:src="@drawable/refresh"
        android:contentDescription="@string/agendaRefresh"/>
    
</RelativeLayout><!-- From: file:/home/remediassance/AndroidStudioProjects/Android-Studio-KP/app/src/main/res/layout-xlarge-land/agenda_interface_ext.xml -->