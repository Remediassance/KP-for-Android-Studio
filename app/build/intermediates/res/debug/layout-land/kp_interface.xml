          android:gravity="center"
          android:textSize="20sp"
       android:background="@color/darkBlue"/>


  Name field -->


   <EditText
       android:id="@+id/editName"
       android:layout_width="230sp"
       android:layout_height="wrap_content"
       android:hint="@string/participantLogin"
       android:ems="10"
       android:inputType="textPersonName"
       android:layout_below="@+id/toolbar"
       android:layout_alignLeft="@+id/editPassword"
       android:layout_alignStart="@+id/editPassword"
       android:layout_marginTop="27dp"
       android:textColor="@color/primary_text_default_material_light"
       android:textColorHint="@color/material_drawer_hint_text"/>
   <!-- Name field -->


   <!-- Password field -->
   <EditText
       android:id="@+id/editPassword"
       android:layout_width="230sp"
       android:layout_centerHorizontal="true"
       android:layout_height="wrap_content"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginTop="15sp"
       android:layout_below="@+id/editName"
       android:hint="@string/participantPassword"
       android:ems="10"
       android:inputType="textPassword"
       android:textColor="@color/primary_text_default_material_light"
       android:textColorHint="@color/material_drawer_hint_text"/>
   <!-- Password field -->
   
   <!-- Advanced mode field -->
   <RelativeLayout
       android:id="@+id/advModeParent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/editPassword"
       android:layout_marginTop="25dp"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_centerHorizontal="true">
    <ImageView
        android:id="@+id/advModeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/advancedMode"
        android:src="@drawable/ic_add" />
    
    <TextView
    	    android:id="@+id/advModeText"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:textSize="20sp"
    	    android:layout_centerVertical="true"
    	    android:layout_toRightOf="@+id/advModeImg"
    	    android:layout_toEndOf="@+id/advModeImg"
            android:textColor="@color/black"
    	    android:text="@string/advancedModeOn"/>
   </RelativeLayout>
   <!-- Advanced mode field --> 
    
    <!-- IP field -->
   <EditText
       android:id="@+id/editIP"
       android:layout_width="230sp"
       android:layout_centerHorizontal="true"
       android:layout_height="wrap_content"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginTop="15sp"
       android:layout_below="@+id/advModeParent"
       android:hint="@string/ssIP"
       android:ems="10"
       android:inputType="textPersonName"
       android:visibility="invisible"
       android:textColor="@color/primary_text_default_material_light"
       android:textColorHint="@color/material_drawer_hint_text"/>
   <!-- IP field -->
   
   <!-- Port field -->


   <EditText
       android:id="@+id/editPort"
       android:layout_width="230sp"
       android:layout_centerHorizontal="true"
       android:layout_height="wrap_content"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginTop="15sp"
       android:layout_below="@+id/editIP"
       android:hint="@string/ssPort"
       android:ems="10"
       android:inputType="textPersonName"
       android:visibility="invisible"
       android:textColor="@color/primary_text_default_material_light"
       android:textColorHint="@color/material_drawer_hint_text"/>
   <!-- Port field -->

	<Button
	    android:id="@+id/guestBtn"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:layout_alignWithParentIfMissing="false"
	    android:layout_below="@+id/connectBtn"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="12dp"
	    android:background="?attr/colorPrimary"
	    android:text="@string/guestBtn"
	    android:textColor="@color/white"
	    android:textSize="15sp"
	    android:textStyle="bold" />

    <Button
        android:id="@+id/connectBtn"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/guestBtn"
        android:layout_alignLeft="@+id/guestBtn"
        android:layout_alignRight="@+id/guestBtn"
        android:layout_alignStart="@+id/guestBtn"
        android:layout_below="@+id/editPort"
        android:background="?attr/colorPrimary"
        android:text="@string/connectBtn"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/C:/Users/Андрей/Documents/GitHub/KP-for-Android-Studio/app/src/main/res/layout-land/kp_interface.xml -->