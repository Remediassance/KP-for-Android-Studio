<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/lightBlue">
        
    <TextView
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"/>
        
    <ImageView
        android:id="@+id/agendaRefresh"
        android:layout_width="@dimen/agenda_refresh_btn_width"
        android:layout_height="@dimen/agenda_refresh_btn_height"
        android:gravity="center"
        android:src="@drawable/refresh"
        android:contentDescription="@string/agendaRefresh"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/press2reconnect"
        android:id="@+id/textView8"
        android:layout_below="@+id/agendaRefresh"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkBlue"/>

    <TextView
        android:id="@+id/noAgendaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/agendaRefresh"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/agendaNotAvailable"
        android:textSize="@dimen/agenda_ext_text_size" />

</RelativeLayout><!-- From: file:/home/remediassance/AndroidStudioProjects/Android-Studio-KP/app/src/main/res/layout-land/agenda_interface_ext.xml -->