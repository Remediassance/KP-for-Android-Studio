<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Agenda" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:transitionName="actionBar"
        android:paddingTop="@dimen/tool_bar_top_padding"
        />

    <ImageView
        android:id="@+id/presImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/title"
        android:contentDescription="@string/descrSlideImg"
        android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/mic"/>
    
    <RelativeLayout
        android:id="@+id/presNumbers"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4sp"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:background="@color/gray">

    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/mic"
        android:layout_width="80dp"
	 android:layout_height="80dp"
     android:padding="10dp"
     	 android:src="@drawable/inactive_mic"
     	 android:contentDescription="@string/descrMike" android:layout_below="@+id/toolbar"
         android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    
    <!--<ImageView
        android:id="@+id/refresh"
        android:layout_width="80dp"
	 android:layout_height="80dp"
	 android:layout_alignParentRight="true"
	 android:layout_alignParentTop="true"
	 android:padding="10dp"
     	 android:src="@drawable/refresh"
     	 android:contentDescription="@string/descrRefreshBtn"/>-->
           
