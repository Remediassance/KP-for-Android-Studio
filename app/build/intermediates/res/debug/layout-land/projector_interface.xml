        android:id="@+id/presMenu"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="65sp"
        android:background="@color/material_drawer_primary_100"
        android:elevation="2dp"
        android:alpha="0.9">

    </RelativeLayout> -->
    <TextView
        android:id="@+id/slideNumber"
        android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:paddingLeft="5sp"
     android:paddingRight="5sp"
        android:textSize="16sp" android:layout_alignTop="@+id/presImage" android:layout_toRightOf="@+id/presNumbers"
        android:layout_toEndOf="@+id/presNumbers"/>

    <ImageView
        android:id="@+id/btnForward"
        android:layout_width="65dp"
     android:layout_height="65dp"
        android:src="@drawable/right_arrow"
        android:contentDescription="@string/descrRightArr"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="65dp"
     android:layout_height="65dp"
        android:src="@drawable/left_arrow"
        android:contentDescription="@string/descrLeftArr"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/slideNumber"
        android:layout_toEndOf="@+id/slideNumber"
        android:layout_marginBottom="10dp"/>


