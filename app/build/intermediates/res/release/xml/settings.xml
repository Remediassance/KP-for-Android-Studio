<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            android:transitionName="actionBar"
            android:paddingTop="@dimen/tool_bar_top_padding"
            />

    <ListPreference
        	android:key="screen_timeout"
            android:textColor="@color/black"
        	android:title="@string/screenTimeoutTitle"
        	android:dialogTitle="@string/screenTimeoutDialog"
        	android:entries="@array/timeoutEntries"
        	android:entryValues="@array/timeoutValues"
            android:layout_below="@+id/toolbar"
        	android:defaultValue="300000"/>

</PreferenceScreen><!-- From: file:/C:/Users/Андрей/AndroidstudioProjects/KP/app/src/main/res/xml/settings.xml -->