<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <!-- Image area -->
    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_width="300sp"
        android:layout_height="350sp">
        
    	<ImageView
        	android:id="@+id/profileAvatar"
        	android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:contentDescription="@string/userAvatar"
    		android:layout_alignParentTop="true"
    		android:src="@drawable/no_image"/>
    	
	</RelativeLayout>
	
    
    <!-- Person information area -->
    <RelativeLayout
        android:id="@+id/personInfoLayout"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_toRightOf="@+id/imageLayout">
        
        <!-- Name area -->      
    	<TextView
    		android:id="@+id/nameLabel"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/userName"
        	android:textSize="34sp"/>
        
    	<EditText
        	android:id="@+id/nameValue"
        	android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_toRightOf="@id/nameLabel"
      		android:layout_marginLeft="10sp"
      		android:textSize="32sp"
      		android:layout_alignBaseline="@+id/nameLabel"
      		android:inputType="textPersonName"/>    	
    	<!-- Name area -->
    	
    	<!-- Phone area -->
    	<TextView
    		android:id="@+id/phoneLabel"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/userPhone"
        	android:textSize="34sp"
        	android:layout_marginTop="20sp"
        	android:layout_below="@id/nameLabel"/>
        
    	<EditText
        	android:id="@+id/phoneValue"
        	android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:layout_toRightOf="@id/phoneLabel"
      		android:layout_alignBaseline="@+id/phoneLabel"
      		android:layout_marginLeft="10dp"
      		android:textSize="32sp"
      		android:inputType="phone"/>
    	<!-- Phone area -->    	
    	
	</RelativeLayout>    
    
</RelativeLayout><!-- From: file:/home/remediassance/AndroidStudioProjects/Android-Studio-KP/app/src/main/res/layout-xlarge-land/profile.xml -->