<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/noAgendaView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agendaNotAvailable"
            android:gravity="center"
            android:textSize="20sp"
            android:clickable="false"
            android:textColor="@android:color/black"
            android:alpha="0.54"
            android:layout_marginBottom="90dp"
            android:layout_above="@+id/agendaRefresh"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8" />

        <ImageButton
            android:id="@+id/agendaRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/refresh"
            android:contentDescription="@string/agendaRefresh"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            style="?android:attr/borderlessButtonStyle"    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/press2reconnect"
            android:id="@+id/textView8"
            android:layout_below="@+id/agendaRefresh"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:alpha="0.87"
            android:textSize="20sp" />

</RelativeLayout>